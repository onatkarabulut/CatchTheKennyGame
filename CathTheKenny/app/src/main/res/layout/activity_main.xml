<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <androidx.gridlayout.widget.GridLayout
            android:layout_width="302dp"
            android:layout_height="363dp"
            android:id="@+id/gridLayout" android:layout_marginTop="4dp" android:layout_marginBottom="43dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp" app:layout_constraintTop_toBottomOf="@+id/timeText"
            app:layout_constraintBottom_toTopOf="@+id/scoreText">

        <ImageView
                android:layout_width="100dp"
                android:layout_height="120dp"
                app:srcCompat="@drawable/kenny"
                app:layout_row="0"
                app:layout_column="0"
                android:onClick="inScore"
                android:id="@+id/idKenny1"/>

        <ImageView
                android:layout_width="100dp"
                android:layout_height="120dp"
                app:srcCompat="@drawable/kenny"
                app:layout_row="0"
                app:layout_column="1"
                android:onClick="inScore"
                android:id="@+id/idKenny2"/>

        <ImageView
                android:layout_width="100dp"
                android:layout_height="120dp"
                app:srcCompat="@drawable/kenny"
                app:layout_row="0"
                app:layout_column="2"
                android:onClick="inScore"
                android:id="@+id/idKenny3"/>

        <ImageView
                android:layout_width="100dp"
                android:layout_height="120dp"
                app:srcCompat="@drawable/kenny"
                app:layout_row="1"
                app:layout_column="0"
                android:onClick="inScore"
                android:id="@+id/idKenny4"/>

        <ImageView
                android:layout_width="100dp"
                android:layout_height="120dp"
                app:srcCompat="@drawable/kenny"
                app:layout_row="1"
                app:layout_column="1"
                android:onClick="inScore"
                android:id="@+id/idKenny5"/>
        <ImageView
                android:layout_width="100dp"
                android:layout_height="120dp"
                app:srcCompat="@drawable/kenny"
                app:layout_row="1"
                app:layout_column="2"
                android:onClick="inScore"
                android:id="@+id/idKenny6"/>

        <ImageView
                android:layout_width="100dp"
                android:layout_height="120dp"
                app:srcCompat="@drawable/kenny"
                app:layout_row="2"
                app:layout_column="0"
                android:onClick="inScore"
                android:id="@+id/idKenny7"/>

        <ImageView
                android:layout_width="100dp"
                android:layout_height="120dp"
                app:srcCompat="@drawable/kenny"
                app:layout_row="2"
                app:layout_column="1"
                android:onClick="inScore"
                android:id="@+id/idKenny8"/>

        <ImageView
                android:layout_width="100dp"
                android:layout_height="120dp"
                app:srcCompat="@drawable/kenny"
                app:layout_row="2"
                app:layout_column="2"
                android:onClick="inScore"
                android:id="@+id/idKenny9"/>


    </androidx.gridlayout.widget.GridLayout>
    <TextView
            android:text="time : 10"
            android:layout_width="102dp"
            android:layout_height="31dp" android:id="@+id/timeText"
            android:textSize="20sp" android:layout_marginTop="111dp"
            android:layout_marginBottom="43dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/gridLayout" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.498"
            android:textAlignment="center"/>
    <TextView
            android:text="score : 0"
            android:layout_width="242dp"
            android:layout_height="57dp" android:id="@+id/scoreText"
            android:textSize="24sp" android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/gridLayout" android:layout_marginBottom="89dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.497"/>

</androidx.constraintlayout.widget.ConstraintLayout>